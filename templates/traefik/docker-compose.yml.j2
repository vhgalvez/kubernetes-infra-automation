version: "3.9"

services:
  traefik:
    image: "traefik:v3.3"
    container_name: traefik
    restart: always
    command:
      - --configFile=/etc/traefik/traefik.toml
    ports:
      - "80:80"
      - "443:443"
      - "8080:8080"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - "{{ traefik_config_dir }}:/etc/traefik"