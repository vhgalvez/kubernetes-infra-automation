global
    log stdout format raw local0
    maxconn 4096
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5s
    timeout client 50s
    timeout server 50s

frontend kubernetes_api
    bind *:6443
    mode tcp
    default_backend kubernetes_masters

backend kubernetes_masters
    mode tcp
    balance roundrobin
{% for host in groups['masters'] %}
    server master-{{ loop.index }} {{ hostvars[host]['ansible_host'] }}:6443 check
{% endfor %}

frontend http_traffic
    bind *:80
    default_backend web_servers

backend web_servers
    balance roundrobin
    option httpchk GET /healthz
{% for host in groups['workers'] %}
    server worker-{{ loop.index }} {{ hostvars[host]['ansible_host'] }}:80 check
{% endfor %}

frontend https_traffic
    bind *:443
    default_backend web_servers_ssl

backend web_servers_ssl
    balance roundrobin
    option ssl-hello-chk
{% for host in groups['workers'] %}
    server worker-{{ loop.index }} {{ hostvars[host]['ansible_host'] }}:443 ssl check
{% endfor %}